FROM hmctspublic.azurecr.io/hmcts/library/node-stretch-slim-lts-8:8-stretch-slim

ENV APP_USER=hmcts \
    WORKDIR=/opt/app

WORKDIR ${WORKDIR}

RUN userdel node \
    && addgroup --system --gid 1000 $APP_USER \
    && adduser --system --gid 1000 -uid 1000 --disabled-password --disabled-login $APP_USER \
    && chown -R $APP_USER:$APP_USER $WORKDIR

USER hmcts
CMD ["yarn", "start"]
